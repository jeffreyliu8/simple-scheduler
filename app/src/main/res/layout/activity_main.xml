    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.askjeffreyliu.simplescheduler.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.askjeffreyliu.simplescheduler.view.ScheduleView
            android:id="@+id/mondayView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/isGreenSwitch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="isAvaiable" />

            <com.askjeffreyliu.simplescheduler.view.ScheduleView
                android:id="@+id/tuesdayView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1" />
        </LinearLayout>


